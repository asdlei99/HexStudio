<metro:MetroWindow x:Class="HexStudio.Views.GenericWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HexStudio.Views"
        mc:Ignorable="d"
        Title="{Binding Title}" MinHeight="{Binding MinHeight}" MinWidth="{Binding MinWidth}"
                   BorderThickness="1" BorderBrush="{DynamicResource AccentColorBrush}"
                   TitleCaps="False" Icon="{Binding Icon}" ResizeMode="{Binding ResizeMode}"
                   SaveWindowPosition="True"
                   >
</metro:MetroWindow>
